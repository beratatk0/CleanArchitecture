@{
    ViewData["Title"] = "Update";
}
@model ProductDTO

<div class="row">
    <div class="col-md-6">

        <form asp-action="Update" method="post" asp-controller="Product">

            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreationDate" />
            </div>
            <div class="form-group">

                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" required="true" value="@Model.Name" />

            </div>
            <div class="form-group">

                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" required="true" value="@Model.Stock" />

            </div>
            <div class="form-group">

                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" required="true" value="@Model.Price" />

            </div>
            <div class="form-group">

                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>

            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>

        </form>

    </div>
</div>

