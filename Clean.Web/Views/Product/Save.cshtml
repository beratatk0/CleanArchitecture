
@{
    ViewData["Title"] = "Save";
}
@model ProductDTO

<div class="row"> 

    <div class="col-md-6">

        <form asp-action="Save" method="post" asp-controller="Product">

            <div class="form-group">

                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" required="true"/>

            </div>
            <div class="form-group">

                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" required="true"/>

            </div>
            <div class="form-group">

                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" required="true"/>

            </div>
            <div class="form-group">

                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>

            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success"/>
            </div>

        </form>

    </div>

</div>

