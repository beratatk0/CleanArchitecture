@{
    ViewData["Title"] = "Index";
}
@model List<ProductWithCategoryDTO>

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">

    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Stock</td>
            <td>Price</td>
            <td>Category Id</td>
            <td>Created Date</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Stock</td>
                <td>@item.Price</td>
                <td>@item.CategoryId</td>
                <td>@item.CreationDate</td>
            </tr>
        }
    </tbody>

</table>