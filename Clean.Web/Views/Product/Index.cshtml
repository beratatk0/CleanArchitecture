
@model List<ProductWithCategoryDTO>


<div>
    <div>
        <input class="btn btn-outline-success" style="float:right;" type="button" value="Add Item" onclick="@("window.location.href='" + @Url.Action("Save", "Product") + "'");" />
    </div>

    <table class="table table-striped">

        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Stock</td>
                <td>Price</td>
                <td>Category</td>
                <td>Created Date</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Stock</td>
                    <td>@item.Price</td>
                    <td>@item.Category.Name</td>
                    <td>@item.CreationDate</td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-outline-danger" asp-controller="Product" asp-action="Remove" asp-route-id="@item.Id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>


    </table>



</div>
